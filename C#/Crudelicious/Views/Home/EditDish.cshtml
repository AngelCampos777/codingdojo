@model Dish
<h1>Edit your item</h1>
<div class="text-center">
    <form action="/dish/update/@Model.DishId" method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Chef">Chef</label>
            <input asp-for="Chef">
            <span asp-validation-for="Chef" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Tastiness">Tastiness</label>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Calories">Calories</label>
            <input type="number" asp-for="Calories">
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea asp-for="Description" rows="10" cols="30"></textarea><br>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>
@{
    ViewData["Title"] = "Home Page";
}
@model Product
<div class="text-center">
    <h1>Add Product</h1>
    <div class="row">
        <div class="col-6">
            <form action="/product/add" method="post">
            <div class="form-group">
                <label for="Name">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label for="Description">Description</label><br>
            <textarea asp-for="Description" rows="7" cols="30" class="form-control"></textarea><br>
            <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input type="Number" step="0.01" asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
            </form>
        </div>
        <div class="col-6">
            <h1>Buy More!</h1>
            @foreach(Product p in ViewBag.AllProducts)
            {
                <a href="/product/@p.ProductId"><h3>@p.Name</h3></a>
            }
        </div>
    </div>
</div>
